<div>
    @min:@sec
</div>

@code {
    [Parameter] public Mastermind Mastermind { get; set; }

    private int min;
    private int sec;
    private Timer timer;
    protected override void OnInitialized()
    {
        min = 0;
        sec = 0;
        timer = new Timer(UpdateClock, null, 0, 200);

    }

    private void UpdateClock(object state)
    {
        InvokeAsync(() =>
        {

                if (sec == 59)
                {
                    sec = 0;
                    min += 1;
                }
                else
                {
                    sec += 1;
                }
                StateHasChanged();
        });
    }

    public void Dispose()
    {
        timer?.Dispose();
    }
}
